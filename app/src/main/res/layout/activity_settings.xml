<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimaryVariant"
    android:orientation="vertical"
    >
    <TextView
        style="@style/ButtonSettingsMenuStyle"
        android:layout_marginStart="0dp"
        android:id="@+id/settingsBack"
        android:text="@string/settings_play_list"
        app:drawableLeftCompat="@drawable/light_mode_back"
        app:drawableTint="?attr/colorOnPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/hight"
        android:orientation="vertical">

        <androidx.appcompat.widget.SwitchCompat
            style="@style/ButtonSettingsMenuStyle"
            android:id="@+id/themeSwitch"
            android:showText="true"
            />

        <FrameLayout
            android:layout_height="61dp"
            android:layout_width="match_parent">

            <TextView
                style="@style/ButtonSettingsMenuStyle"
                android:id="@+id/buttonShare"
                android:text="@string/share_play_list"/>

            <ImageView
                android:layout_width="@dimen/hightmenu"
                android:layout_height="@dimen/hightmenu"
                android:layout_gravity="right"
                android:gravity="end|center_vertical"
                android:scaleType="centerInside"
                android:src="@drawable/light_mode_share"
                app:tint="@color/setMenuIcon" />
        </FrameLayout>

    <FrameLayout
        android:layout_height="@dimen/hightmenu"
        android:layout_width="match_parent">

        <TextView
            style="@style/ButtonSettingsMenuStyle"
            android:id="@+id/buttonSupport"
            android:text="@string/send_play_list" />

        <ImageView
            android:layout_width="@dimen/hightmenu"
            android:layout_height="@dimen/hightmenu"
            android:layout_gravity="right"
            android:gravity="end|center_vertical"
            android:scaleType="centerInside"
            android:src="@drawable/light_mode_support"
            app:tint="@color/setMenuIcon" />
    </FrameLayout>
    <FrameLayout
        android:layout_height="61dp"
        android:layout_width="match_parent">

        <TextView
            style="@style/ButtonSettingsMenuStyle"
            android:id="@+id/buttonUser"
            android:text="@string/user_play_list"/>

        <ImageView
            android:layout_width="@dimen/hightmenu"
            android:layout_height="@dimen/hightmenu"
            android:layout_gravity="right"
            android:gravity="end|center_vertical"
            android:scaleType="centerInside"
            android:src="@drawable/light_mode_user"
            app:tint="@color/setMenuIcon" />
    </FrameLayout>
    </LinearLayout>

</LinearLayout>