<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimaryVariant"
    android:orientation="vertical">

    <TextView
        android:id="@+id/settingsBack"
        style="@style/ButtonSettingsMenuStyle"
        android:layout_marginStart="0dp"
        android:text="@string/settings_play_list"
        app:drawableLeftCompat="@drawable/light_mode_back"
        app:drawableTint="?attr/colorOnPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/hight"
        android:orientation="vertical">


        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/themeSwitcher"
            style="@style/ButtonSettingsMenuStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginHorizontal="60dp"
            android:showText="true"
            android:text="@string/dark_play_list" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="61dp">

            <TextView
                android:id="@+id/buttonShare"
                style="@style/ButtonSettingsMenuStyle"
                android:text="@string/share_play_list" />

            <ImageView
                android:layout_width="@dimen/hightmenu"
                android:layout_height="@dimen/hightmenu"
                android:layout_gravity="end"
                android:contentDescription="@string/share_play_list"
                android:gravity="end|center_vertical"
                android:scaleType="centerInside"
                android:src="@drawable/light_mode_share"
                app:tint="@color/setMenuIcon" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/hightmenu">

            <TextView
                android:id="@+id/buttonSupport"
                style="@style/ButtonSettingsMenuStyle"
                android:text="@string/send_play_list" />

            <ImageView
                android:layout_width="@dimen/hightmenu"
                android:layout_height="@dimen/hightmenu"
                android:layout_gravity="end"
                android:contentDescription="@string/send_play_list"
                android:gravity="end|center_vertical"
                android:scaleType="centerInside"
                android:src="@drawable/light_mode_support"
                app:tint="@color/setMenuIcon" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="61dp">

            <TextView
                android:id="@+id/buttonUser"
                style="@style/ButtonSettingsMenuStyle"
                android:text="@string/user_play_list" />

            <ImageView
                android:layout_width="@dimen/hightmenu"
                android:layout_height="@dimen/hightmenu"
                android:layout_gravity="end"
                android:contentDescription="@string/user_play_list"
                android:gravity="end|center_vertical"
                android:scaleType="centerInside"
                android:src="@drawable/light_mode_user"
                app:tint="@color/setMenuIcon" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>