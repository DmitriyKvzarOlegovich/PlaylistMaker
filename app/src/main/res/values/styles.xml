<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonMainMenuStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="cornerRadius">@dimen/rad</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="ButtonSettingsMenuStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/hightmenu</item>
        <item name="android:layout_marginStart">@dimen/hight</item>
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/textMin</item>
    </style>

    <style name="searchStyle">
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>
    <style name="trackStyle">
        <item name="android:maxLines">1</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:ellipsize">end</item>

    </style>
</resources>
