<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/settingsBack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/ysdisplay"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:text="@string/settings_play_list"
            android:textColor="@color/black"
            android:textSize="@dimen/text"
            app:drawableLeftCompat="@drawable/light_mode_back"
            app:drawableTint="@color/black" />

    </FrameLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/hight"
        android:orientation="vertical">

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="match_parent"
            android:layout_height="@dimen/hightmenu"
            android:fontFamily="@font/ysdisplay"
            android:layout_marginStart="@dimen/hight"
            android:text="@string/light_play_list"
            android:textColor="@color/black"
            android:showText="true"
            android:textSize="@dimen/textMin" />

        <Button
            android:id="@+id/buttonShare"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hightmenu"
            android:fontFamily="@font/ysdisplay"
            android:textSize="@dimen/textMin"
            android:textAllCaps = "false"
            android:text="@string/share_play_list"
            android:gravity="start|center_vertical"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            app:iconGravity="end"
            app:iconTint="@color/black"
            app:icon="@drawable/light_mode_share" />

        <Button
            android:id="@+id/buttonSupport"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hightmenu"
            android:fontFamily="@font/ysdisplay"
            android:textSize="@dimen/textMin"
            android:textAllCaps = "false"
            android:text="@string/send_play_list"
            android:gravity="start|center_vertical"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            app:iconGravity="end"
            app:iconTint="@color/black"
            app:icon="@drawable/light_mode_support" />

        <Button
            android:id="@+id/buttonUser"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hightmenu"
            android:fontFamily="@font/ysdisplay"
            android:gravity="start|center_vertical"
            android:textAllCaps = "false"
            android:text="@string/user_play_list"
            android:textSize="@dimen/textMin"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            app:iconGravity="end"
            app:iconTint="@color/black"
            app:icon="@drawable/light_mode_user" />

    </LinearLayout>
</LinearLayout>